	PROGRAM D4R8
C	Driver for routine QGAUS
	EXTERNAL FUNC
	PARAMETER(X1=0.0,X2=5.0,NVAL=10)
	DX=(X2-X1)/NVAL
	WRITE(*,'(/1X,A,T12,A,T23,A/)') '0.0 to','QGAUS','Expected'
	DO 11 I=1,NVAL
		X=X1+I*DX
		CALL QGAUS(FUNC,X1,X,SS)
		WRITE(*,'(1X,F5.2,2F12.6)') X,SS,
     *			-(1.0+X)*EXP(-X)+(1.0+X1)*EXP(-X1)
11	CONTINUE
	END

	FUNCTION FUNC(X)
	FUNC=X*EXP(-X)
	END
