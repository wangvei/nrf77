	PROGRAM D6R21
C	Driver for routine BESSI0
	CHARACTER TEXT*27
	OPEN(5,FILE='FNCVAL.DAT',STATUS='OLD')
10	READ(5,'(A)') TEXT
	IF (TEXT.NE.'Modified Bessel Function I0') GOTO 10
	READ(5,*) NVAL
	WRITE(*,*) TEXT
	WRITE(*,'(1X,T5,A,T13,A,T28,A)')
     *		'X','Actual','BESSI0(X)'
	DO 11 I=1,NVAL
		READ(5,*) X,VALUE
		WRITE(*,'(F6.2,2E16.7)') X,VALUE,BESSI0(X)
11	CONTINUE
	CLOSE(5)
	END
