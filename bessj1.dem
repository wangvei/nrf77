	PROGRAM D6R17
C	Driver for routine BESSJ1
	CHARACTER TEXT*18
	OPEN(5,FILE='FNCVAL.DAT',STATUS='OLD')
10	READ(5,'(A)') TEXT
	IF (TEXT.NE.'Bessel Function J1') GOTO 10
	READ(5,*) NVAL
	WRITE(*,*) TEXT
	WRITE(*,'(1X,T5,A1,T12,A6,T22,A9)')
     *		'X','Actual','BESSJ1(X)'
	DO 11 I=1,NVAL
		READ(5,*) X,VALUE
		WRITE(*,'(F6.2,2F12.7)') X,VALUE,BESSJ1(X)
11	CONTINUE
	CLOSE(5)
	END
