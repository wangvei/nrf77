	PROGRAM D6R26
C	Driver for routine BESSI
	CHARACTER TEXT*27
	OPEN(5,FILE='FNCVAL.DAT',STATUS='OLD')
10	READ(5,'(A)') TEXT
	IF (TEXT.NE.'Modified Bessel Function In') GOTO 10
	READ(5,*) NVAL
	WRITE(*,*) TEXT
	WRITE(*,'(1X,T5,A,T12,A,T20,A,T34,A)')
     *		'N','X','Actual','BESSI(N,X)'
	DO 11 I=1,NVAL
		READ(5,*) N,X,VALUE
		WRITE(*,'(1X,I4,F8.2,2E16.7)') N,X,VALUE,BESSI(N,X)
11	CONTINUE
	CLOSE(5)
	END
