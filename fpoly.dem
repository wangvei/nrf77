	PROGRAM D14R6
C	Driver for FPOLY
	PARAMETER(NVAL=15,DX=0.1,NPOLY=5)
	DIMENSION AFUNC(NPOLY)
	WRITE(*,'(/1X,T29,A)') 'Powers of X'
	WRITE(*,'(/1X,T9,A,T17,A,T27,A,T37,A,T47,A,T57,A)') 'X','X**0',
     *			'X**1','X**2','X**3','X**4'
	DO 11 I=1,NVAL
		X=I*DX
		CALL FPOLY(X,AFUNC,NPOLY)
		WRITE(*,'(1X,6F10.4)') X,(AFUNC(J),J=1,NPOLY)
11	CONTINUE
	END
